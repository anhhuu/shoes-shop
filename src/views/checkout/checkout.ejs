<!-- top Products -->

<div class="ads-grid_shop">
    <div class="shop_inner_inf">
        <div class="privacy about">
            <h3>Chec<span>kout</span></h3>

            <div class="checkout-right">
                <h4>Your shopping cart contains: <span id="amount-product-cart"> </span>Products</h4>
                <table class="timetable_sub" aria-readonly="true">
                    <thead>
                    <tr>
                        <th>SL No.</th>
                        <th>Product</th>
                        <th>Quality</th>
                        <th>Product Name</th>
                        <th>Size</th>
                        <th>Price</th>
                    </tr>
                    </thead>
                    <tbody id="cart-in-checkout">


                    </tbody>
                </table>
            </div>
            <div class="checkout-left">
                <div class="col-md-4">
                    <div class="row mb-5">
                        <div class="card w-100">
                            <div class="card-header">Choose address to delivery</div>
                            <div class="card-body mx-3">
                                <div class="row mb-3"> Address: <span id="show-address-delivery"><%=user.phone_number%>,<%=user.first_name + user.last_name%>,<%=user.address%></span></div>

                                <div class="row mb-3">Choose other address:
                                    <select name="Choose address" id="select-address-delivery" class="w-100" style="height: fit-content">
                                        <option value="" > </option>
                                        <%user.list_address.map(addr=>{%>
                                        <option value="<%=addr._id%>" > <%=addr.phone_number%>,<%=addr.full_name%>,<%=addr.address_text%></option>
                                        <%})%>
                                    </select>
                                </div>
                                <div class="row mb-3">Total Service Charges <i>-</i> <span>$55.00</span></div>
                                <div class="row mb-3">Total <i>-</i> <span>$1405.00</span></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="card">
                            <div class="card-header">Choose payment methods</div>
                            <div class="card-body mx-3">
                                <div class="row mb-3"> Payment method: <span id="show-payment-method"> COD</span></div>

                                <div class="row mb-3">Choose other address:
                                    <select name="Choose payments methods" id="select-payment-method" class="w-100" style="height: fit-content">
                                        <option value="" > </option>
                                        <option value="COD" >COD</option>
                                        <option value="Credit Card" >Credit Card</option>
                                        <option value="Online Payment" >Online Payment</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="col-md-8 address_form">
                    <h4>Add a new Details</h4>
                    <form action="#" method="post" class="creditly-card-form agileinfo_form" id="add-new-delivery">
                        <section class="creditly-wrapper wrapper">
                            <div class="information-wrapper">
                                <div class="first-row form-group">
                                    <div class="controls">
                                        <label class="control-label">Full name: </label>
                                        <input class="billing-address-name form-control"
                                               value="<%= user.first_name %> <%= user.last_name %>" type="text"
                                               name="name" id="fullname-user" placeholder="Full name" required>
                                    </div>
                                    <div class="card_number_grids">
                                        <div class="card_number_grid_left">
                                            <div class="controls">
                                                <label class="control-label">Mobile number:</label>
                                                <input class="form-control" type="text" value="<%= user.phone_number %>"
                                                       placeholder="Mobile number" id="phone-user" required>
                                            </div>
                                        </div>

                                        <div class="controls">
                                            <label class="control-label">Province: </label>
                                            <select class="form-control p-0 w-100" id="select-province" required>
                                                <option value=""></option>
                                                <% provinces.map(province=>{ %>
                                                <option value="<%= province._id %>"><%= province.name %></option>
                                                <% }) %>
                                            </select>

                                        </div>
                                        <div class="">
                                            <label class="control-label">District: </label>
                                            <select class="form-control p-0 w-100" id="select-district" required>

                                            </select>
                                        </div>
                                        <div class="">
                                            <label class="control-label">Wards: </label>
                                            <select class="form-control p-0 w-100" id="select-ward" required>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="controls">
                                        <label class="control-label">Address:</label>
                                        <input class="form-control" type="text"
                                               placeholder="Address" id="address-user" required>
                                    </div>
                                    <div class="controls">
                                        <label class="control-label">Note:</label>
                                        <textarea class="form-control w-100 " type="text" value=""
                                                  placeholder="Note" id="user-note" style="max-height: 150px;min-height: 150px"></textarea>
                                    </div>
                                    <button class="submit check_out">Delivery to this Address</button>
                                </div>
                            </div>
                        </section>
                    </form>
                    <div class="checkout-right-basket">
                        <button class="btn" id="order">ORDER </button>
                    </div>
                </div>

                <div class="clearfix"></div>


                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
