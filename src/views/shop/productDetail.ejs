<!-- top Products -->
<div class="ads-grid_shop">
    <div class="shop_inner_inf">
        <div class="col-md-4 single-right-left ">
            <div class="grid images_3_of_2">
                <div class="">
                    <ul class="slides">
                        <li data-thumb="<%= product.image_show_url %>">
                            <div class="thumb-image">
                                <img src="<%= product.image_show_url %>" data-imagezoom="true" class="img-responsive">
                            </div>
                        </li>
                    </ul>
                    <div class="clearfix">

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 single-right-left simpleCart_shelfItem">
            <h3><%= product.name %>     -<%=Math.floor(product.discount*100)%>%</h3>
            <h4 class="my-4">Category: <%= category.name %></h4>
            <h4 class="my-4">Brand: <%= brand.name %></h4>
            <h4 class="my-4">SKU: <%= product.SKU %></h4>
            <h4 class="my-4">Status: <span id="status"></span></h4>
            <h4 class="my-4">Remain: <span id="remain"></span></h4>

            <p><span class="item_price"><%= product.price.string_price %></span>
                <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' })
                        .format(Math.floor(product.price.price_value*(1-product.discount)/1000)*1000) %></p>

        </div>
        <form action="#" id="add-to-cart">
            <div class="container my-4">
                <div class="row">
                    <input type="hidden" name="idProduct" value="<%= product._id %>">
                    <div class="col-1">
                        <h4 class="mt-1" style="display: inline">Color: </h4>
                    </div>
                    <div class="col">
                        <% color.map(data=>{ %>
                            <input type="radio"
                                   id="<%= data %>"
                                   style="display:inline; border: #1adeed solid;padding: 5px"
                                   name="color"
                                   value="<%= data %>"/>
                            <label for="<%= data %>"><%= data %></label>
                        <% }) %>

                    </div>

                </div>


            </div>
            <div class="container my-4">
                <div class="row">
                    <div class="col-1">
                        <h4 class="mt-1" style="display: inline">Size: </h4>
                    </div>
                    <div class="col">
                        <% size.map((data, index)=>{ %>

                            <input id="<%= data._id %>" type="radio"
                                   name="size"
                                   onchange="chooseSize(this.id, '<%= product._id %>')"
                                   style="display:inline; border: #1adeed solid;padding: 5px; margin-bottom: 3px;"
                                   value="<%= data._id %>"/>
                            <label for="<%= data._id %>" class=" mr-4"><%= data.text %></label>
                            <% if((index + 1) % 3 === 0){ %>
                                <div class="clearfix"></div>
                            <% } %>
                        <% }) %>
                    </div>

                </div>
                <div class="row  align-items-center">
                    <div class="col-1 align-items-center">
                        <h4 class="mt-1" style="display: inline">Qty </h4>
                    </div>
                    <div class="col qty my-4">
                        <span class="minus bg-dark" id="minus-qty">-</span>
                        <input type="number" class="count" name="qty" value="1"/>
                        <span class="plus bg-dark" id="plus-qty">+</span>
                    </div>

                </div>
                <div class="row  align-items-center ">
                    <div class="col-1"></div>
                    <div class="col">
                        <button class="align-center btn-basic" type="submit"

                                style="display:inline; padding: 5px; margin-bottom: 3px;">Add to cart
                        </button>
                    </div>

                </div>


            </div>
        </form>

    </div>
    <div class="clearfix"></div>
</div>
    <div class="p-5 m-3">
        <div class="card p-3 m-2">
            <h3>Product Detail (Chi tiết sản phẩm)</h3>
            <div id="p-detail-content">

            </div>
        </div>
        <div class="card p-3 m-2">
            <h3>(Hướng dẫn mua hàng)</h3>
            <div id="p-tutorial-content">

            </div>
        </div>
        <div class="card p-3 m-2">
            <h3>Đánh giá</h3>
            <div id="p-review-content">

            </div>
        </div>
    </div>
</div>
